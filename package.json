{
	"name": "lootcaster-client",
	"version": "0.1.0",
	"private": true,
	"scripts": {
		"serve": "vue-cli-service serve",
		"build": "vue-cli-service build",
		"lint": "vue-cli-service lint",
		"test:e2e": "vue-cli-service test:e2e",
		"test:unit": "vue-cli-service test:unit"
	},
	"dependencies": {
		"axios": "^0.19.0",
		"core-js": "^2.6.5",
		"uuid": "^3.3.3",
		"vue": "^2.6.10",
		"vue-router": "^3.0.3",
		"vuex": "^3.0.1"
	},
	"devDependencies": {
		"@types/axios": "^0.14.0",
		"@vue/cli-plugin-babel": "^3.12.0",
		"@vue/cli-plugin-e2e-nightwatch": "^3.12.0",
		"@vue/cli-plugin-eslint": "^3.12.0",
		"@vue/cli-plugin-unit-mocha": "^3.12.0",
		"@vue/cli-service": "^3.12.0",
		"@vue/eslint-config-standard": "^4.0.0",
		"@vue/test-utils": "1.0.0-beta.29",
		"babel-eslint": "^10.0.1",
		"chai": "^4.1.2",
		"eslint": "^5.16.0",
		"eslint-plugin-vue": "^5.0.0",
		"node-sass": "^4.12.0",
		"sass-loader": "^7.1.0",
		"vue-template-compiler": "^2.6.10"
	},
	"eslintConfig": {
		"root": true,
		"env": {
			"node": true
		},
		"extends": [
			"plugin:vue/essential",
			"@vue/standard"
		],
		"rules": {
			"indent": [
				2,
				"tab"
			],
			"space-before-function-paren": [
				"error",
				"never"
			],
			"no-tabs": [
				"off"
			],
			"no-control-regex": [
				"off"
			],
			"no-trailing-spaces": "off",
			"no-unused-vars": "warn"
		},
		"parserOptions": {
			"parser": "babel-eslint"
		}
	},
	"postcss": {
		"plugins": {
			"autoprefixer": {}
		}
	},
	"lint-staged": {
		"*.{js,vue}": [
			"vue-cli-service lint",
			"git add"
		]
	},
	"browserslist": [
		"> 1%",
		"last 2 versions"
	]
}
